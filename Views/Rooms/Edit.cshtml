@model Booking.Models.Rooms

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align: center;">Edit Your Room</h1>

<hr />
<div class="row">
    <div class="edit">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomType" class="control-label"></label>
                <select asp-for="RoomType" class="form-control">
                    <option value="Basic">Basic</option>
                    <option value="Deluxe">Deluxe</option>
                    <option value="Suita">Suita</option>
                </select>
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverPhoto" class="control-label"></label>
                <input asp-for="CoverPhoto" type="file" class="form-control" />
                <span asp-validation-for="CoverPhoto" class="text-danger"></span>

                @if (!string.IsNullOrEmpty(Model.CoverPhotoFileName))
                {
                    <div>
                        <img src="~/uploads/cover/@Model.CoverPhotoFileName" alt="Cover Photo" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
            </div>

            <hr size="6" />
            <div class="form-group row">
                <div class="col-md-1">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>

