@model Booking.Models.Rooms

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align: center;">Details</h1>
<hr size="8" />
<div class="edit">
    <form asp-controller="Rooms"  method="post">
        <input type="hidden" asp-for="Id" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RoomType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RoomType)
            </dd>
          
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)$
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        <a class="BookBtn" asp-controller="BookRooms" asp-action="Index">BookNow</a>
    </form>

    <br />
    <br />
    <br />
    <br />
    <br />
    <div>

        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a>
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model?.Id">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

</div>


